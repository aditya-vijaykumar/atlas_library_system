<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> ALT Author Login</h1>
      <% include ./partials/messages %>
      <form action="/author/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
          >
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
          >
        </div>
        <button type="submit" class="btn btn-primary btn-block">Login</button>
      </form>
      <div class="row mt-3">
        <div class="col-md-6">
          <a href="/author/forgot" class="btn btn-outline-warning" >Forgot Password?</a>
        </div>
        <div class="col-md-6">
          <a href="/author/resendlink" class="btn btn-outline-warning" style="align-items: right;">Resend Verification Link</a>
        </div>
      </div>      
    </div>
  </div>
</div>
