  <% include ./includes/admin-nav %>

  <div class="content-wrapper">
    <div class="container-fluid">
      <!-- Breadcrumbs-->
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="#">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Revenue</li>
      </ol>
      <div class="mt-2 mb-2"><% include ./partials/messages %></div>
      <!-- /box_general-->
      <div class="row">
        <div class="col-md-6">
          <div class="box_general padding_bottom">
            <div class="header_box version_2">
              <h2><i class="fa fa-money"></i>Revenue Details</h2>
            </div>
            <div class="form-group">
              <h4>Revenue Balance</h4>
              <h5>&#9830; 0.01 ALT</h5>
              <h5>&#8377; 1 INR</h5>
            </div>

          </div>
        </div>
        <div class="col-md-6">
          <div class="box_general padding_bottom">
            <div class="header_box version_2">
              <h2><i class="fa fa-exchange"></i>Payment for Authors</h2>
            </div>
            <form action="/payment" method="POST" id="transfer">
              <fieldset>
                <div class="form-group">
                  <label class="col-sm-8 col-form-label">Ensure you cross check before proceeding.</label>
                  <label class="col-sm-8 col-form-label">Enter Amount in ALT tokens.</label>
                  <label class="col-sm-8 col-form-label">&#8377; 100.00 = &#9830; 1.0000 ALT</label>
                </div>
                <div class="form-group">
                  <label>Author Email address</label>
                  <input class="form-control" name="email" id="email" type="email">
                  <small id="emailHelp" class="form-text text-muted">We'll email the author payment reciept.</small>
                </div>
                <div class="form-group">
                  <label>Author's Ethereum address</label>
                  <input class="form-control" name="ethaddress" id="ethaddress" type="text">
                </div>
                <div class="form-group">
                  <label>Amount</label>
                  <input class="form-control" name="token" id="token" type="number">
                </div>
                <div class="form-group">
                  <label>Confirm Amount</label>
                  <input class="form-control" name="token2" id="token2" type="number">
                </div>
                <div class="form-group">
                  <p style="text-align: center;">
                    <button type="submit" class="btn_1 medium">Make Payment</button></p>
                </div>
              </fieldset>
            </form>
          </div>
        </div>
      </div>
      <!-- /row-->

    </div>
