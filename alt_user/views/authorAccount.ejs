<div class="jumbotron mt-3">
  <h1 class="display-5">Hello, <%= user.name %></h1>
</div>

<div class="row">
  <div class="card border-primary mb-3 col-6 px-2 py-2">
    <div class="card-header">Account details</div>
    <div class="card-body">
      <h4 class="card-title">Name: <%= user.name %> </h4>
      <h4 class="card-title">Email: <%= user.email %> </h4>
    </div>
    <div class="card-header">Ethereum Account details</div>
    <div class="card-body">
      <h4 class="card-title">Ethereum address:</h4>
      <h5><%= user.ethaddress%></h5>
      <h4 class="card-title">Token Balance:</h4>
      <h5> &#9830; <span id="balance"></span> ALT</h5>
    </div>

  </div>

  <div class="card border-primary col-6 px-3 py-4">
    <form action="/payment" method="POST" id="transfer">
      <fieldset>
        <legend>Payment for Authors</legend>
        <div class="form-group">
          <label for="staticEmail" class="col-sm-8 col-form-label">Ensure you cross check before proceeding.</label>
          <label for="staticEmail" class="col-sm-8 col-form-label">&#8377; 100.00 = &#9830; 1.0000 ALT</label>
        </div>
        <div class="form-group">
          <fieldset>
            <label class="control-label" for="email">Email address</label>
            <input class="form-control" id="email" name="email" type="text" placeholder="Email Address">
            <small id="emailHelp" class="form-text text-muted">We'll email the author payment reciept.</small>
          </fieldset>
        </div>
        <div class="form-group">
          <fieldset>
            <label class="control-label" for="ethaddress">Author's Ethereum address</label>
            <input class="form-control" id="ethaddress" name="ethaddress" type="text"
              placeholder="Author's Ethereum address">
          </fieldset>
        </div>
        <div class="form-group">
          <label for="token">Amount</label>
          <input type="number" class="form-control" name="token" id="token" placeholder="Amount" min="0" step="0.01">
        </div>
        <div class="form-group">
          <label for="token2">Confirm Amount</label>
          <input type="number" class="form-control" name="token2" id="token2" placeholder="Confirm Amount" min="0"
            step="0.01">
        </div>
        <button type="submit" class="btn btn-primary">Purchase</button>
      </fieldset>
    </form>
  </div>
</div>
