<% include ./includes/head-two %>

<body>
  <div id="page" class="theia-exception">
    <% include ./includes/author-nav %>
    <main>
      <section id="hero_in" class="courses">
        <div class="wrapper">
          <div class="container">
            <h1 class="fadeInUp"><span></span><%= data.book_title %></h1>
          </div>
        </div>
      </section>
      <!--/hero_in-->

      <div class="bg_color_1">
        <nav class="secondary_nav sticky_horizontal">
          <div class="container">
            <ul class="clearfix">
              <li><a href="#description" class="active">Description</a></li>
              <% if(data.admin_revert) { %>
              <li><a href="#rejection">Rejection Reason</a></li>
              <% } if(!data.admin_revert) { %>
              <li><a href="#ebook">E-Book</a></li>
              <% } %>
            </ul>
          </div>
        </nav>
        <div class="container margin_60_35">
          <div class="row">
            <aside class="col-lg-2" id="sidebar">
            </aside>
            <div class="col-lg-8">
              <section id="description">
                <!-- /box_highlight -->
                <h2>Description</h2>
                <% if(data.admin_revert) { %>
                <h3>Book Reverted!</h3>
                <p>This Book has been reverted by the admin and therefore, some data might be unavailable.</p>
                <% } if(!data.admin_revert) { %>
                <div class="grid" style="margin-top: 1rem;">
                  <ul class="magnific-gallery">
                    <li>
                      <figure>
                        <img src="<%= data.image_url %>" alt="<%= data.book_title %>">
                        <figcaption>
                          <div class="caption-content">
                            <a href="<%= data.image_url %>" title="<%= data.book_title %>" data-effect="mfp-zoom-in">
                              <i class="pe-7s-albums"></i>
                              <p>Your caption</p>
                            </a>
                          </div>
                        </figcaption>
                      </figure>
                    </li>

                  </ul>
                </div>
                <% } %>
                <p><%= data.book_desc %></p>

                <div class="row">
                  <div class="col-lg-6">
                    <ul class="bullets">
                      <li>Book Pages: <%= data.book_pages %></li>
                      <li>Category and Genre : <%= data.genres %></li>
                      <li>Price : <%= data.book_rental_price %> tokens per Day</li>
                    </ul>
                  </div>
                  <div class="col-lg-6">

                  </div>
                </div>
                <!-- /row -->
              </section>
              <!-- /section -->

              <% if(data.admin_revert) { %>
              <section id="teachers">
                <div class="intro_title">
                  <h2>Rejection Reason</h2>
                </div>
                <p><%= data.admin_revert_msg %></p>
                <div class="row add_top_20 add_bottom_30">
                </div>
                <!-- /row -->
              </section>

              <!-- /section -->
              <% } %>

              <% if(!data.admin_revert) { %>
              <section id="teachers">
                <div class="intro_title">
                  <h2>Preview E-Book</h2>
                </div>
                <h2 class="display-5 mb-3">E-Book</h2>
                <div class="mainbook">
                  <div class="err"></div>
                  <div class="top-bar">
                    <button class="new-btn btn-primary" id="prev-page">
                      <i class="fas fa-arrow-circle-left"></i> Prev Page
                    </button>
                    <button class="new-btn btn-primary" id="next-page">
                      Next Page <i class="fas fa-arrow-circle-right"></i>
                    </button>
                    <span class="page-info">
                      Page <span id="page-num"></span> of <span id="page-count"></span>
                    </span>
                  </div>
                  <p id="loading"><strong>Please wait while the PDF loads...</strong></p>

                  <canvas id="pdf-render" width="860px"></canvas>
                </div>
                <div class="row add_top_20 add_bottom_30">
                </div>
                <!-- /row -->
              </section>
              <!-- /section -->
              <% } %>
            </div>
            <!-- /col -->


          </div>
          <!-- /row -->
        </div>
        <!-- /container -->
      </div>
      <!-- /bg_color_1 -->
    </main>
    <!--/main-->

    <% include ./includes/footer-two %>
  </div>
  <!-- COMMON SCRIPTS -->
  <script src="/static/js/jquery-2.2.4.min.js"></script>
  <script src="/static/js/common_scripts.js"></script>
  <script src="/static/js/main.js"></script>
  <script src="/static/assets/validate.js"></script>
  <script src="/static/javascripts/pdf.js"></script>
  <script src="/static/javascripts/authorBook.js"></script>
</body>
<!-- Logout Modal-->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
      </div>
      <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
      <div class="modal-footer">
        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
        <a class="btn btn-primary" href="/users/logout">Logout</a>
      </div>
    </div>
  </div>
</div>