<% include ./includes/head-one %>

<body>
  <div id="page">
    <% include ./includes/user-nav %>
    <div class="search-overlay-menu" style="margin: 0rem;">
      <span class="search-overlay-close"><span class="closebt"><i class="ti-close"></i></span></span>
      <form role="search" id="searchform" action="/app/browse/search/1/">
        <input value="" name="search" type="search" placeholder="Search..." />
        <button type="submit"><i class="icon_search"></i>
        </button>
      </form>
    </div>
    <main>
      <section id="hero_in" class="courses">
        <div class="wrapper">
          <div class="container">
            <h1 class="fadeInUp"><span></span>Browse Collection of Books</h1>
          </div>
        </div>
      </section>
      <!--/hero_in-->

      <div class="container">
        <div class="row">
          <div class="col-10">
            <ol class="breadcrumb" style="margin-top: 15px;">
              <li class="breadcrumb-item">Home</li>
              <li class="breadcrumb-item active">Browse Library</li>
            </ol>
          </div>


          <div class="col-1 mt-4">
            <ul id="top_menu" style="margin-left: 1rem;">
              <li><a href="#0" class="search-overlay-menu-btn" style="color: #1b1464;">Search</a></li>
            </ul>
          </div>
          <div class="col-offset-1"></div>
        </div>

      </div>
      <!-- /container -->

      <div class="container margin_60_35">
        <div class="row">
          <% include ./partials/books %>
        </div>
        <!-- /row -->
        <div class="row">

          <div class="col-lg-12 text-center">
            <div class="btn-group mr-2 open" role="group" aria-label="pagination">

              <% if (pages > 0) { %>
              <ul class="pagination text-center">
                <% if (currentPage == 1) { %>
                <li class="disabled"><a class="btn_1 rounded add_top_30">First</a></li>
                <% } else { %>
                <li><a href="/app/browse/1" class="btn_1 rounded add_top_30">First</a></li>
                <% } %>

                <% var i = (Number(currentPage) > 5 ? Number(currentPage) - 4 : 1) %>
                <% if (i !== 1) { %>
                <li class="disabled"><a class="btn_1 rounded add_top_30">...</a></li>
                <% } %>

                <% for (; i <= (Number(currentPage) + 4) && i <= pages; i++) { %>
                <% if (i == currentPage) { %>
                <li class="active"><a class="btn_1 rounded add_top_30"><%= i %></a></li>
                <% } else { %>
                <li><a href="/app/browse/<%= i %>" class="btn_1 rounded add_top_30"><%= i %></a></li>
                <% } %>
                <% if (i == Number(currentPage) + 4 && i < pages) { %>
                <li class="disabled"><a class="btn_1 rounded add_top_30">...</a></li>
                <% } %>
                <% } %>
                <% if (currentPage == pages) { %>
                <li class="disabled"><a class="btn_1 rounded add_top_30">Last</a></li>
                <% } else { %>
                <li><a href="/app/browse/<%= pages %>" class="btn_1 rounded add_top_30">Last</a></li>
                <% } %>
              </ul>
              <% } %>
            </div>
          </div>
        </div>
        <div class="btn-toolbar" role="toolbar" aria-label="Pagination for the books">
        </div>
        <!-- /container -->
        <div class="bg_color_1">
          <div class="container margin_60_35">
            <div class="row">
              <div class="col-md-4">
                <a href="#0" class="boxed_list">
                  <i class="pe-7s-help2"></i>
                  <h4>Need Help? Contact us</h4>
                  <p>Cum appareat maiestatis interpretaris et, et sit.</p>
                </a>
              </div>
              <div class="col-md-4">
                <a href="#0" class="boxed_list">
                  <i class="pe-7s-wallet"></i>
                  <h4>Payments and Refunds</h4>
                  <p>Qui ea nemore eruditi, magna prima possit eu mei.</p>
                </a>
              </div>
              <div class="col-md-4">
                <a href="#0" class="boxed_list">
                  <i class="pe-7s-note2"></i>
                  <h4>Quality Standards</h4>
                  <p>Hinc vituperata sed ut, pro laudem nonumes ex.</p>
                </a>
              </div>
            </div>
            <!-- /row -->
          </div>
          <!-- /container -->
        </div>
        <!-- /bg_color_1 -->
    </main>
    <!--/main-->
    <!--/main-->
    <% include ./includes/footer-one %>
  </div>
  <!-- COMMON SCRIPTS -->
  <script src="/static/js/jquery-2.2.4.min.js"></script>
  <script src="/static/js/common_scripts.js"></script>
  <script src="/static/js/main.js"></script>
  <script src="/static/assets/validate.js"></script>
</body>
